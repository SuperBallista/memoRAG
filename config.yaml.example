# memoRAG 설정 파일 (config.yaml로 복사해서 사용하세요)

# 임베딩 모델 설정
embedding:
  # 추천 모델 (크기/성능 균형):
  # - paraphrase-multilingual-MiniLM-L12-v2 (약 420MB, 빠름, 384차원) ⭐
  # - intfloat/multilingual-e5-small (약 470MB, 384차원)
  # - intfloat/multilingual-e5-base (약 1.1GB, 768차원, 고성능)
  model_name: "paraphrase-multilingual-MiniLM-L12-v2"
  batch_size: 32
  device: "cpu"  # GPU 없는 환경에 최적화

# ChromaDB 설정
database:
  persist_directory: "./chroma"
  default_collection: "default"

# 문서 파싱 설정
parsing:
  chunk_size: 512          # 청크 크기 (토큰 단위)
  chunk_overlap: 50        # 청크 중복 (토큰 단위)
  supported_extensions:
    - ".pdf"
    - ".docx"
    - ".hwpx"
    - ".txt"
    - ".md"

# 검색 설정
search:
  top_k: 5                 # 상위 K개 결과 반환
  similarity_threshold: 0.5  # 유사도 임계값

# 출력 설정
output:
  show_score: true         # 유사도 점수 표시
  show_snippet: true       # 스니펫 표시
  snippet_length: 200      # 스니펫 길이 (문자 수)
  verbose: false           # 상세 로그 출력

# 로깅 설정
logging:
  level: "INFO"            # DEBUG, INFO, WARNING, ERROR
  file: "./logs/memorag.log"

